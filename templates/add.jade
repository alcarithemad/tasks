extends layout

block content
	form(action="/action", method="POST")
		input.text_in(type="text", name="description", placeholder="description")
		input(type="text", name="project", placeholder="project")
		input(type="date", name="date")
		input(type="time", name="time")

		input(type="text", name="action", value="add", style="display: none")
		button.button(name="submit") submit
